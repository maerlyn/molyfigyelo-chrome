{
  "name":         "Moly-figyelő",
  "version":      "1.0",
  "description":  "Moly-figyelő, Chrome verzió",
  "manifest_version": 2,
 
  "background": {
    "page": "background.html"
  },
 
  "browser_action": {
    "default_icon":   "favicon.ico",
    "popup":          "popup.html"
  },

  "permissions": [
    "tabs",
    "http://moly.hu/*"
  ],
  
  "icons": {
    "16":   "favicon.ico",
    "128":  "icon_128.png"
  }
}

